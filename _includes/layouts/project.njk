---
layout: layouts/base.njk
templateClass: tmpl-post
---
<h1>{{ title }}</h1>

<time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
{%- for tag in tags | filterTagList %}
{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
<a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
{%- endfor %}

<div class="flow" style="margin-top: 1.5rem;">
{{ content | safe }}
</div>

{%- if collections.projects %}
{%- set nextProject = collections.projects | getNextCollectionItem(page) %}
{%- set previousProject = collections.projects | getPreviousCollectionItem(page) %}
{%- if nextProject or previousProject %}
<hr>
<ul class="postlist" role="list">
  {%- if nextProject %}<li>Next: <a class="postlist-link" href="{{ nextProject.url | url }}">{{ nextProject.data.title }}</a></li>{% endif %}
  {%- if previousProject %}<li>Previous: <a class="postlist-link" href="{{ previousProject.url | url }}">{{ previousProject.data.title }}</a></li>{% endif %}
</ul>
{%- endif %}
{%- endif %}
