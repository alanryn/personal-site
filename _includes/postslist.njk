<div reversed class="posts flow--space-small">
{% for post in postslist | reverse %}
  <div class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <img style="border-radius:1.25rem 1.25rem 0 0; aspect-ratio: 3/2; object-fit: cover; width: 100%;" 
    src="{{post.data.image_low_res}}" data-src="{{post.data.image}}" class="lazy-img">
    <a style="padding:1rem" href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    <time style="padding:0 1rem 1rem 1rem" class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    {# {% for tag in post.data.tags | filterTagList %}
      {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
    {% endfor %} #}
  </div>
{% endfor %}

</div>
